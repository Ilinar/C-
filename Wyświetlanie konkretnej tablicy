#include <iostream>

using namespace std;

int main()
{


    int tab[5][6]=
    {
        {2, -1, 0, 0, 0, 0,},
        {-1, 2, -1, 0, 0, 1,},
        {0, -1, 2, -1, 0, 2,},
        {0, 0, -1, 2, -1, 3,},
        {0, 0, 0, -1, 2, 4,},
    };

    for (int j=0; j<5; j++)
    {
        for (int i=0; i<5; i++)
        {
            cout << tab[j][i] << " ";
        }
        cout << "| " <<tab[j][5] << endl;
    }

    return 0;
}
