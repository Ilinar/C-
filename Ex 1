#include <iostream>
#include <math.h>
#include <iomanip>

using namespace std;

double function(double x)
{
    return cos(x) - x;
}

int main()
{
    double xl, xr, xm, x0, tolerance;
    tolerance = 0,00000001;

    cout << "X left = ";
    cin >> xl;

    cout << "X right";
    cin >> xr;

    xm = (xl + xr)/2;

    do
    {
        if (function(xl) <= function(x0) < function(xm))
        {
            xr = xm;
        }
        else if (function(xm) <= function(x0) <= function(xr))
        {
            xl = xm;
        }

        else
        {
            cout << "error, wrong cin";
        }

    }
    while (fabs((xr-xl)/xm) >= tolerance);

    return 0;
}
